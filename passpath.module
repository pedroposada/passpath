/**
 * Implements hook_page_delivery_callback_alter()
 */
function passpath_page_delivery_callback_alter(&$callback) {
	
	$dest = current_path();
  switch (TRUE) {
    case user_is_logged_in():
      break;
    case array_key_exists($dest, variable_get('passpath_protected_paths', array())):
			if (isset($_COOKIE["Drupal_visitor_passpath_expire_{$dest}"]) && ($_COOKIE["Drupal_visitor_passpath_expire_{$dest}"] < REQUEST_TIME)) {
	      drupal_goto('passpath/nojs/protect', array('query' => array('destination' => $dest)));
			}
      break;
  }
  
}

