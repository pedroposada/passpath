/**
 * password protection form
 */

function passpath_protect_form($form, &$form_alter) {
  $form['password'] = array(
    '#type' => 'password',
    '#title' => t('Password'),
  );
  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
  );
  
  return $form;
}
function passpath_protect_form_validate(&$form, &$form_state) {
	if (!drupal_strlen($form_state['values']['password'])) {
		form_error($form['password'], t('Password is required'));
	}
	if (array_key_exists(drupal_get_destination(), variable_get('passpath_protected_paths', array()))) {
		$paths = variable_get('passpath_protected_paths', array());
		if (user_hash_password($form_state['values']['password']) != $paths[drupal_get_destination()]['password']) {
			form_error($form['password'], t('Wrong password.'));
		}
	}
}
function passpath_protect_form_submit(&$form, &$form_state) {
	if ($form_state['redirect'] = drupal_get_destination()) {
		if (array_key_exists(drupal_get_destination(), variable_get('passpath_protected_paths', array()))) {
			$paths = variable_get('passpath_protected_paths', array());
			user_cookie_save(array("passpath_expire_{$form_state['redirect']}" => strtotime("+ {$paths[$form_state['redirect']]['expire']} hours")));
		}
	}
}
